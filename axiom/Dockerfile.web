# Dockerfile.web

# --- Build del frontend ---
FROM node:20-bookworm-slim AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci

# copia TODO el proyecto (incluye src, index.html, vite.config.js, etc.)
COPY . .

# Puedes parametrizar VITE_API_BASE en build (queda vacÃ­o para same-origin):
ARG VITE_API_BASE
ENV VITE_API_BASE=${VITE_API_BASE}

RUN npm run build

# --- Servir con Nginx ---
FROM nginx:alpine

# Config de nginx con proxy /api -> api:3001
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Copia el build
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80
