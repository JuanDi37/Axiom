# Dockerfile.api
FROM node:20-bookworm-slim

WORKDIR /app

COPY package*.json ./
RUN npm ci --omit=dev

# Carpeta para SQLite (persistida v√≠a volumen)
RUN mkdir -p /app/data

# Copia solo el backend
COPY server ./server

ENV NODE_ENV=production
ENV PORT=4000

EXPOSE 4000

CMD ["node", "server/index.js"]
